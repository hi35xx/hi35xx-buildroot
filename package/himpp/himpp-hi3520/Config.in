		BR2_PACKAGE_HIMPP_EXTDRV_I2C

config BR2_PACKAGE_HIMPP_EXTDRV_TW2960
	bool "tw2960"
	default y
	depends on BR2_PACKAGE_HIMPP_EXTDRV_GPIO_I2C || \
		BR2_PACKAGE_HIMPP_EXTDRV_I2C

endmenu

